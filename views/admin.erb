<h2>All Users</h2>


	<% unless @users.empty?%>
	<table class="table table-striped table-condensed">
   <thead>
  <tr>
    <th>User ID</th>
    <th>Email</th>
    <th>Account created at</th>
    <th>Last seen at</th>
    <th>Billing ID</th>
    <th>Subscription ID</th>
    <th>Role</th>
    <th>Active</th>
    <th></th>
  </tr>
</thead>
<tbody>
	<% @users.each do |user| %>
	<% if user.isAdmin? %>
		<tr class="danger">
	<% else %>
		<tr>
	<% end %>
	
		
		<td><%= user.id%></td>
		<td><%= user.email%></td>
		<td><%= user.created_at.strftime("%F at %T")%></td>
		<td><%= user.lastSeenAt.strftime("%F at %T")%></td>
		<td><%= user.billingID%></td>
		<td><%= user.subscriptionID%></td>
		<td>
				<% if user.isAdmin? %>
					Admin
				<% else %>
				   User
				<% end %>
		</td>
		<td class="text-danger">
			<% if user.is_locked %>
			   Locked
			<% end %>
		</td>

		<td>
			<button type="button" class="btn btn-warning btn-xs">Lock</button>
			<button type="button" class="btn btn-danger btn-xs">Delete</button>

		</td>
	</tr>
	<%end%>
</tbody>
</table>
	<%end%>
 

</script>
