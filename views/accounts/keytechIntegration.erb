

<form id="credentials" class="form-horizontal" role="form" accept-charset="UTF-8" action="/account" class="edit-keytech-credentials" method="post">
	<fieldset>

		<div style="margin:0;padding:0;display:inline">
			<input name="utf8" type="hidden" value="âœ“">
			<input name="_method" type="hidden" value="put">
		</div>

		<h3>keytech Credentials </h3>

		<div class="form-group">
			<label class="col-sm-3 control-label" for="keytechAPIURL">keytech API URL</label>
			<div class="col-sm-9">
				<input class="form-control" id = "keytechAPIURL" name="keytechAPIURL" placeholder="<%= @user.keytechAPIURL %>" type="text" value="<%= @user.keytechAPIURL %>" autocomplete="off">
				<a id="testURL">Test API</a>

				<a id="setDefault">Set to Demo Database</<a>

					<script>
					$('#setDefault').click(function(){
						$('#keytechAPIURL').val('https://demo.keytech.de');
						$('#keytechUserName').val('jgrant');
						$('#keytechPassword').val('')
					});
					</script>

				</div>
			</div>

		<div class="form-group">
			<label class="col-sm-3 control-label" for="keytechUserName">keytech Username</label>
			<div class="col-sm-9">
				<input class="form-control" id="keytechUserName" name="keytechUserName" placeholder="<%= @user.keytechUserName %>" type="text" value="<%= @user.keytechUserName %>" autocomplete="off">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label" for="keytechPassword">keytech password</label>
			<div class="col-sm-9">
				<input class="form-control" id="keytechPassword" name="keytechPassword" placeholder type="password" value="<%= @user.keytechPassword %>" autocomplete="off">
			</div>
		</div>


			<div class="form-group">
				<div class="col-sm-offset-3 col-sm-9">
					<button form="credentials" type="submit" class="btn btn-default" name="submit" value="commitKeytechCredentials">Save</button>
				</div>
			</div>
		</fieldset>
	</form>
