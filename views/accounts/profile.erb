<form accept-charset="UTF-8" action="/account" class="form-horizontal" role="form"  method="post">
  <fieldset>
    <h3 id="profile">Profile</h3>

    <div style="margin:0;padding:0;display:inline">
      <input name="utf8" type="hidden" value="âœ“">
      <input name="_method" type="hidden" value="put">
    </div>

    <% gravatar_helper(@user) %>

    <div class="form-group">
      <label class="col-sm-3 control-label" for="fullname[name]">Username</label>
      <div class="col-sm-9">
        <input class="form-control" id="fullname" name="fullname" placeholder="Name" type="text" autocomplete="off" value="<%= @user.fullname %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label" for="user[email]">Email</label>
      <div class="col-sm-9">
        <input class="form-control" id="user_email" name="user[email]" placeholder="<%= @user.email %>" size="30" type="email" value="<%= @user.email %>" disabled autocomplete="off">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <button type="submit" class="btn btn-default" name="submit" value="commitProfile">Save</button>
      </div>
    </div>
  </fieldset>
</form>
